                  .input__wrapper.step1
                     input(type="file" name="file" id="input__file" class="input input__file")
                     label.input__file-button(for="input__file")
                      span.input__file-icon-wrapper
                        img.input__file-icon(src='img/download.svg', alt='icon', width='25', height='26')
                      span.input__file-button-text Загрузить файл
                  .col-1.step1
                    .title Размещение камеры

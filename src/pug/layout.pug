                    div.form-control
                      input#expl.radio(type="radio" required="required" name="expl" )
                      label(for="expl") span Б/У оборудование
                  .step2
                    .step2__wrapper
                      div
                        img(src='img/gr1.svg', alt='icon', width='58', height='157')
                        input#temp.radio(type="radio" required="required" name="temp" checked="checked" )
                        label(for="temp") Среднетемпературный <br>( 5-100 С )
                      div
                        img(src='img/gr2.svg', alt='icon', width='58', height='157')
                        input#temp.radio(type="radio" required="required" name="temp" checked="checked" )
                        label(for="temp") Низкотемпературный <br>( -10 - 250 С )
                      div
                        img(src='img/gr3.svg', alt='icon', width='58', height='157')
                        input#temp.radio(type="radio" required="required" name="temp" checked="checked" )
                        label(for="temp") Шоковая заморозка <br>( -30 - 400 С )
                  .step3 
                    .step3__wrapper
                      .col-2 
                        span Объем помещения (Д*Ш*В) *
                        input#ob.text(required="required" name="ob" type="text" autocomplete="off")
                        span Утепление
                        div
                          input#ut.radio(type="radio" required="required" name="ut" checked="checked" )
                          label(for="ut") Пенополиуретан
                        div
                          input#ut.radio(type="radio" required="required" name="ut" checked="checked" )
                          label(for="ut") Пенополистерол
                        span Толщина утепления, мм
                        div
                          input#tol.radio(type="radio" required="required" name="tol" checked="checked" )
                          label(for="ut") 60
                        div
                          input#tol.radio(type="radio" required="required" name="tol" checked="checked" )
                          label(for="ut") 80
                        div
                          input#tol.radio(type="radio" required="required" name="tol" checked="checked" )
                          label(for="ut") 100
                      .col-2
                        span Продукт хранения *
                        input#pr.text(required="required" name="pr" type="text" autocomplete="off")
                        span Объем продукта, кг *
                        input#ob.text(required="required" name="ob" type="text" autocomplete="off")
                        span Температура в камере *
                        input#tkam.text(required="required" name="tkam" type="text" autocomplete="off")
                        span Город *
                        input#sity.text(required="required" name="sity" type="text" autocomplete="off")
                  .step4
                    .step4__wrapper
                      
                      .col-3 
                        div.step4__row 
                          span Юридическая форма
                          input#ur.radio(type="radio" required="required" name="ur" checked="checked" )
                          label(for="ur") Физ. лицо
                          input#ur.radio(type="radio" required="required" name="ur" checked="checked" )
                          label(for="ur") Юр. лицо
                        span ФИО *
                        input#fio.text(required="required" name="fio" type="text" autocomplete="off")
                        span Телефон *
                        input#ph.text(required="required" name="ph" type="text" autocomplete="off")
                      .col-3 
                        span E-mail *
                        input#ma.text(required="required" name="ma" type="text" autocomplete="off")
                        span Комментарий
                        input#msg.text(required="required" name="msg" type="text" autocomplete="off")





                  a.btn.step1(href="#") Следующий шаг
                    img(src='img/arrow.svg', alt='следующий шаг', width='29', height='24')
